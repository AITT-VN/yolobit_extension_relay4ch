      <value name="relay">
        <shadow type="math_number">
          <field name="NUM">3</field>
        </shadow>
      </value>
      <value name="state">
        <shadow type="math_number">
          <field name="NUM">0</field> <!-- Táº®T -->
        </shadow>
      </value>
    </block>
    <block type="relay_get_state">
      <field name="relay">1</field>
    </block>
    <block type="create_relay">
      <field name="ADDRESS">0xab</field>
    </block>
    <block type="change_relay_address">
      <field name="OLD_ADDRESS">0xcd</field>
      <field name="NEW_ADDRESS">0xef</field>
    </block>

  </category>
</xml>
